# Coolify Deployment Environment Variables
# Copy this to .env in Coolify and configure

# Application Settings
APP_URL=https://leantime.example.com
# APP_PORT is not needed - Coolify handles port routing
LEAN_DEBUG=0

# Database Configuration
MYSQL_ROOT_PASSWORD=changeThisStrongPassword123!
MYSQL_DATABASE=leantime
MYSQL_USER=leantime
MYSQL_PASSWORD=changeThisDBPassword456!

# Session Security (generate a strong random string)
LEAN_SESSION_PASSWORD=changeThisRandomString32Characters!
LEAN_SESSION_EXPIRATION=28800

# Email Configuration
LEAN_EMAIL_RETURN=hello@example.com
LEAN_EMAIL_USE_SMTP=false
# Uncomment and configure if using SMTP
# LEAN_EMAIL_SMTP_HOSTS=smtp.gmail.com
# LEAN_EMAIL_SMTP_USERNAME=your-email@gmail.com
# LEAN_EMAIL_SMTP_PASSWORD=your-app-password
# LEAN_EMAIL_SMTP_PORT=587
# LEAN_EMAIL_SMTP_SECURE=tls
# LEAN_EMAIL_SMTP_AUTO_TLS=true

# S3 Storage (optional)
LEAN_USE_S3=false
# LEAN_S3_BUCKET=your-bucket
# LEAN_S3_REGION=us-east-1
# LEAN_S3_KEY=your-access-key
# LEAN_S3_SECRET=your-secret-key

# OIDC/SSO Configuration (optional)
LEAN_OIDC_ENABLE=false
# LEAN_OIDC_CLIENT_ID=your-client-id
# LEAN_OIDC_CLIENT_SECRET=your-client-secret

# Timezone
LEAN_DEFAULT_TIMEZONE=America/New_York